@model List<Rehearsal>
@{
    string category = "";
}
<form method="get">
    @if (Model == null)
    {
        <h2>List is null!</h2>
    }
    @if (Model.Count == 0)
    {
        <h2>List is empty!</h2>
    }
    @foreach (var reh in Model)
    {
        @* if (reh.RehearsalStart == )
        {
            
        } *@
        if (reh.Category == 2)
        {
            category = "с группой";
        }
        else
        {
            category = "";
        }
        <ul class="rehearsal_data">
            <li>Дата: @reh.RehearsalDate</li>
            <li>Время: @reh.RehearsalStart (1 час)</li>
            <li>Репетирует: @reh.Customer @category</li>
            <li>Адрес: Тукая 125к2</li>
            <li>Стоимость: 500 руб.</li>
        </ul>
        <br/>
    }
    @* <input type/> *@
    @* <button class="add_rehearsal" type="submit">Записаться и оплатить</button> *@
</form>